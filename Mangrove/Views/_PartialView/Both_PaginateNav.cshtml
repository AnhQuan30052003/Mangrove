@inject IStringLocalizer<Translate> translate
@model InfomationPaginate

<div class="nav_option my-3 d-flex flex-column flex-sm-row-reverse justify-content-between gap-2 gap-xl-0">
	<div class="d-none d-sm-flex justify-content-sm-end col-2">
		<a href="@Url.Action("Page_Create", Model.Controller)"
		   class="btn_new_item nav_btn rounded-1 border-none time_delay_500ms
			d-flex align-items-center justify-content-around bg-tree text-white
			outline_tree_hover bg_transparent_hover text_black_hover btn_loading"
		   onclick="@Helper.Link.JSSetUrlBack(Helper.Key.adminToPageListIndex)">
			<i class="fa-solid fa-plus"></i>
			@translate["label_them"]
		</a>
	</div>

	<form class="d-inline-flex flex-wrap justify-content-between justify-content-sm-start flex-sm-nowrap col-12 gap-3 gap-sm-1 gap-xl-2 col-sm-9 col-lg-10"
		  method="get"
		  action="@Url.Action("Page_Index", Model.Controller)">

		<input type="text" hidden name="sortType" value="@Model.sortType" />
		<input type="text" hidden name="sortFollow" value="@Model.sortFollow" />

		<div class="form_input flex-grow-1 col-xl-5 flex-xl-grow-0 bg-white border green_effect d-flex align-items-center justify-content-center gap-1 rounded-1 overflow-hidden"
			 style="padding-left: 10px;">
			<i id="icon-s" class="fa fa-search"></i>
			<i id="icon-w" class="fa-solid fa-spinner wait_load d-none"></i>
			<input class="search_ajax p-2 border-none flex-grow-1 outline-none pointer_last"
				   autofocus
				   type="search"
				   name="search"
				   placeholder="@translate["label_tim"]..."
				   value="@Model.FindText">
		</div>

		<select name="pageSize"
				class="page_size nav_btn border-none green_effect rounded-1 cursor-pointer bg-white"
				asp-items="@Model.SelectListPageSize">
		</select>

		<button type="submit"
				class="btn_search nav_btn rounded-1 border-none time_delay_500ms
						d-flex align-items-center justify-content-around outline_tree_hover bg_transparent_hover text_black_hover btn_loading">
			<i class="fa fa-search"></i>
			@translate["label_tim"]
		</button>
	</form>
</div>

<!-- Button: Add item -->
<a href="@Url.Action("Page_Create", Model.Controller)"
   id="addItem"
   class="rounded-1 border-none outline-none time_delay_500ms d-sm-none fs-5
			d-flex align-items-center justify-content-around bg-tree text-white position-fixed
			outline_tree_hover bg_white_hover text_black_hover btn_loading"
   onclick="@Helper.Link.JSSetUrlBack(Helper.Key.adminToPageListIndex)"
   title="@translate["label_them"]">
	<i class="fa-solid fa-plus"></i>
</a>