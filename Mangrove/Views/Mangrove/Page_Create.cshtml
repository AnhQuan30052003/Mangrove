@inject IStringLocalizer<Translate> translate
@model PaginateModel<TblMangrove>
@{
	var isEN = Helper.Func.IsLanguage("en");
	ViewData["Title"] = translate["label_thanh_phan_loai"];
	ViewData["InfoPage"] = translate["label_cay_ngap_man"] + $" ({translate["label_them"]})";
	ViewData["TypePage"] = "Page_Mangrove";

	Layout = Helper.Path.layoutAdmin;
	string pv = Helper.Path.partialView;
}

<input id="english" value="@translate["label_tieng_anh"]" hidden />
<input id="vietnamese" value="@translate["label_tieng_viet"]" hidden />
<input id="photo" value="@translate["label_hinh_anh"]" hidden />
<input id="description" value="@translate["label_mo_ta"]" hidden />

<section class="mod-add-mangrove">
	<div class="container py-2">
		<form action="" method="post" enctype="multipart/form-data">
			<!-- Slides -->
			<div class="frame_slide rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">Slide</h6>
				</div>

				<div class="info">
					<div class="items">
						<div class="add_item mb-3 rounded-1 d-flex flex-wrap gap-1 gap-lg-0 position-relative">
							<button class="btn_remove_item"
									type="button">
								<i class="icon_remove_item fa-solid fa-xmark"></i>
							</button>

							<div class="add_img col-12 col-lg-6 add_img_height rounded-1 p-2">
								<p class="text-center">@translate["label_hinh_anh"]</p>
								<div class="input_img bg-white h-100 d-flex justify-content-center align-items-center">
									<button class="btn_add_img outline-none color-tree bg-transparent fs-1 px-4 py-2 border rounded-1"
											type="button">
										<i class="icon_add fa-solid fa-plus"></i>
									</button>
									<input class="file" type="file" hidden />
								</div>

								<div class="preview_img position-relative d-none" style="height: calc(100% - 27px);">
									<img class="show_temp h-100 object-fit-cover mx-auto d-block rounded-1 click_show_image"
										 src="/img/tree-img/00000000-AAAA-AAAA-AAAA-AAAAAAAAP006.jpg"
										 alt="" />

									<button class="btn_remove_preview_img"
											type="button">
										<i class="icon_remove fa-solid fa-xmark"></i>
									</button>
								</div>
							</div>

							<div class="add_content col-12 col-lg-6 d-lg-flex flex-lg-wrap align-items-lg-center p-2">
								<p class="text-center col-12 align-self-start">@translate["label_mo_ta"]</p>

								<div class="add_content_item mt-1 m-lg-0 col-12">
									<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
									<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
								</div>

								<div class="add_content_item mt-1 m-lg-0 col-12">
									<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
									<input class="w-100 border-none bg_white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
								</div>
							</div>
						</div>
					</div>

					<div class="text-center py-2">
						<button class="btn_add_item_slide" type="button">
							@translate["label_them_item"]
						</button>
					</div>
				</div>
			</div>

			<!-- Info name -->
			<div class="frame_name_info rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">@translate["label_thong_tin"]</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="left col-12 col-lg-6 d-flex flex-column gap-1 pr-10">
						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">Tên (@translate["label_tieng_anh"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">Tên (@translate["label_tieng_viet"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">Tên khoa học</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
						</div>
					</div>

					<div class="right col-12 col-lg-6 d-flex flex-column gap-1 pl-10">
						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">Tên khác (@translate["label_tieng_anh"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">Tên khác (@translate["label_tieng_viet"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">Họ</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" type="text" name="" value="" />
						</div>
					</div>
				</div>
			</div>

			<!-- Morophophy -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">Hình thái</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="7"> </textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="7"> </textarea>
					</div>
				</div>
			</div>

			<!-- Eocology -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">Sinh thái</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="7"> </textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="7"> </textarea>
					</div>
				</div>
			</div>

			<!-- Use -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">Công dụng</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="7"> </textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="7"> </textarea>
					</div>
				</div>
			</div>

			<!-- Distribution and Conservation status -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">Phân bố & Tình trạng bảo tồn</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">Phân bố (@translate["label_tieng_anh"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="3"> </textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">Phân bố (@translate["label_tieng_viet"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="3"> </textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">Tình trạng bảo tồn (@translate["label_tieng_anh"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="3"> </textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">Tình trạng bảo tồn (@translate["label_tieng_viet"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1" cols="30" rows="3"> </textarea>
					</div>
				</div>
			</div>

			<!-- Button submit -->
			<div class="d-flex justify-content-between my-3">
				<button type="button" onclick="getUrlIndex();"
						class="px-3 py-2 border-none outline-none rounded-1 time_delay_500ms text_body bg-white outline_tree_hover text_black_hover">
					Quay lại danh sách
				</button>

				<button class="btn_submit_form px-3 py-2 border-none outline-none bg-tree rounded-1 text-white time_delay_500ms outline_tree_hover bg_transparent_hover text_black_hover">
					@translate["label_them"]
				</button>
			</div>
		</form>
	</div>
</section>							