<div class="frame_measure p-2">
    <div class="form_search">
        <div class="search d-flex justify-content-center">
            <div
                class="form_input border green_effect d-flex h-100 align-items-center justify-content-center gap-1 px-2">
                <i class="icon-s fa fa-search"></i>
                <input class="p-2 border-none flex-grow-1 outline-none" type="search"
                    placeholder="#, ngày, địa điểm (VD: #1, 01/01/2000, Vạn Ninh)">
            </div>
        </div>

        <div style="height: 2px; background-color: black; margin-top: 10px;"></div>

        <div class="list_individuals d-flex flex-lg-wrap justify-content-lg-between">
            @for (int i = 1; i <= 20; i++)
            {
                int view = new Random().Next(200, 1000 + 1);

                <div class="individual_item border mt-2 d-flex flex-wrap justify-content-between col-12 col-lg-6">
                    <div class="top col-12 p-2 d-flex justify-content-between align-items-center col-sm-6">
                        <a class="id_title" href="#">
                            <span>#@i &nbsp;|</span>
                            <span style="text-decoration: underline;">01/02/2025 &nbsp;|</span>
                            <span>@view &nbsp;<i class="fa-solid fa-eye"></i></span>
                        </a>
                        <span>Giai đoạn: 2</span>
                    </div>

                    <div class="bottom col-12 p-2 d-flex justify-content-between align-items-center col-sm-6">
                        <span>Ninh Hoà, Khánh Hoà</span>
                        <button class="toggleQR px-3 py-1 border-none">QR</button>
                    </div>

                    <div class="frame_qr text-center col-12">
                        <img class="h-100 click_show_image" src="~/img/qr-img/qr-code.png" alt="">
                    </div>
                </div>
            }
        </div>
    </div>
</div>