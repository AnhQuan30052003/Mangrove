@inject IStringLocalizer<Translate> translate

<div id="show_qr_code" class="d-none">
	<div class="wrapper bg-white d-flex flex-column justify-content-around align-items-center rounded-1">
		<div class="info d-flex flex-column gap-1 px-4 w-100">
			<h3 class="color-tree text-center mb-3">@translate["label_thong_tin_QR_code"]</h3>
			<p>
				<span>@translate["label_ca_the"]:</span>
				<span class="qr_name">Mấm biển - Avicennia marina (Forssk.) Vierh</span>
			</p>
			<p>
				<span>@translate["label_vi_tri_khao_sat"]:</span>
				<span class="qr_pos">Ngọc Diêm, Ninh Ích, Ninh Hòa, Khánh Hòa</span>
			</p>
			<p>
				<span>@translate["label_kinh_do_khao_sat"]:</span>
				<span class="qr_longitude">109°11'38.0 N</span>
			</p>
			<p>
				<span>@translate["label_vi_do_khao_sat"]:</span>
				<span class="qr_latitude">12°23'48.8 E</span>
			</p>
		</div>

		<div class="box_show_img">
			@* <img class="img qr_img border rounded-3" *@
				 @* src="/img/qr-img/QR_00000000-AAAA-AAAA-AAAA-AAAAAAAAI000_Bần trắng_Vạn Giã, Vạn Ninh, Khánh Hoà.png" /> *@

			<img class="img qr_img rounded-3" style="max-height: 250px;" src="" />
		</div>

		<button class="btnQR_cancel mt-1">
			<i class="fa-solid fa-xmark"></i>
		</button>
	</div>
</div>

