<!-- Dark mode for background footer -->
@if (Model.FooterDark)
{
	<style>
		#user_footer::after {
			background-color: rgba(4, 43, 15, 0.8);
			position: absolute;
			z-index: -1;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			content: "";
		}
	</style>
}

<!-- Variable when upload image -->
<input id="textImageNotAllow" type="text" value="@translate["label_anh_tai_len"]" hidden />
<input id="textMaxSize" type="text" value="@translate["label_dung_luong_toi_da_cua_anh"]" hidden />
<input id="maxSizeMB" type="text" value="5" hidden />
