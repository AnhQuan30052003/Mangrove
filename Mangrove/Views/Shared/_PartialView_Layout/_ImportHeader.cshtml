{
	<style>
		#user_footer::after {
			background-color: rgba(4, 43, 15, 0.8);
			position: absolute;
			z-index: -1;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			content: "";
		}
	</style>
}

