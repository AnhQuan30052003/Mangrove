@inject IStringLocalizer<Translate> translate
@model TblSetting

<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes, maximum-scale=5.0, minimum-scale=1.0">
<meta name="description" content="@Model.DescriptionWebsiteEn">

<!-- Social Share-->
<meta property="og:title" content="Mangrove - NTU: Search for mangrove information." />
<meta property="og:description" content="@Model.DescriptionWebsiteEn" />
<meta property="og:image" content="@Helper.Link.hosting/img/logo/@Model.LogoImg" />
<meta property="og:url" content="@Helper.Link.hosting" />
<meta property="og:type" content="Website" />
<meta property="og:locale" content="en_US" />
<meta property="og:site_name" content="Mangrove - NTU: Search for mangrove information." />

<!-- Title page + Favicon page -->
<title>@ViewData["Title"] | @translate["title_page"]</title>
<link rel="icon" href="~/img/logo/@Model.LogoImg">

<!-- Canonical -->
<link rel="canonical" href="@Helper.Link.hosting" />

<!-- Import CSS + Icon <i> -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<!-- Import Plugins Js -->
<!-- Kéo thả -->
<script src="~/js/plugins/Sortable.js"></script>

<!-- Chart -->
<script src="~/js/plugins/Chart.js"></script>

<!-- CkEditor -->
