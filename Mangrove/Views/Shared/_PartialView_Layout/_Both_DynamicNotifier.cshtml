@{
	string status = TempData["Status"]?.ToString() ?? Helper.StatusNoifier.fail;
	string content = TempData["Content"]?.ToString() ?? "";
	string bgColor = status == Helper.StatusNoifier.fail ? "bg-danger" : "bg-tree";

	if (!string.IsNullOrEmpty(content))
	{
		TempData.Remove("Content");

		<div id="dynamic_notifier" class="w-100 position-fixed bg-transparent" style="top: 0; z-index: 100;">
			<div class="container cursor-pointer">
				<div class="frame @bgColor text-white text-center py-2 fw-bold position-relative rounded-1 overflow-hidden">
					<p>@content</p>
					<div class="frame_time">
						<div class="nav_time rounded-1"></div>
					</div>																		   
				</div>
			</div>
		</div>

		<style>
			#dynamic_notifier .nav_time {
				position: absolute;
				bottom: 0;
				left: 0;
				width: 100%;
				height: 3px;
				background-color: black;
				animation: count_time 10s linear forwards;
			}
		</style>

		<script>
			window.addEventListener("load", function () {
				const dynamicNotifier = document.querySelector("#dynamic_notifier");

				if (dynamicNotifier) {
					setTimeout(() => {
						dynamicNotifier.classList.add("d-none");
					}, 10000);

					dynamicNotifier.addEventListener("click", function() {
						this.classList.add("d-none");
					});
				}
			});
		</script>
	}
}

