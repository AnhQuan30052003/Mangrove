@inject SettingWebsiteController settingWebsite
@inject IStringLocalizer<Translate> translate

@{
	bool isEN = Helper.Func.IsLanguage("en");
	var setting = await settingWebsite.GetSetting();
}

<footer id="admin_footer" class="bg-black text-white">
	<div class="container">
		<p class="text-center text_tree_hover py-2">
			&copy;
			<script>document.write(new Date().getFullYear());</script>
			@translate["footer_ban_quyen"] @(isEN ? setting.SchoolNameEn : setting.SchoolNameVi)
			<i class="fa-regular fa-heart"></i>
		</p>
	</div>
</footer>

<!-- Button: Scroll up-->
<a id="scrollUp"
   href="#header"
   class="rounded-1 text-white border-none outline-none bg-tree fs-5
	outline_tree_hover bg_white_hover text_black_hover"
   title="@translate["footer_icon_top"]">
	<i class="fa fa-angle-up"></i>
</a>