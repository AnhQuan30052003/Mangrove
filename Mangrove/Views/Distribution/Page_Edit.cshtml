@inject IStringLocalizer<Translate> translate
@model TblMangrove
@{
	var isEN = Helper.Func.IsEnglish();
	ViewData["Title"] = translate["label_thanh_phan_loai"];
	ViewData["InfoPage"] = translate["label_cay_ngap_man"] + $" ({translate["label_sua"]})";
	ViewData["TypePage"] = "Page_Mangrove";

	Layout = Helper.Path.layoutAdmin;
	string pv = Helper.Path.partialView;
	List<TblPhoto> photos = TempData["Photos"] as List<TblPhoto> ?? new List<TblPhoto>();
}

<input id="english" value="@translate["label_tieng_anh"]" hidden />
<input id="vietnamese" value="@translate["label_tieng_viet"]" hidden />
<input id="photo" value="@translate["label_hinh_anh"]" hidden />
<input id="description" value="@translate["label_mo_ta"]" hidden />

<section class="mod-add-mangrove">
	<div class="container py-2">
		<form action="" method="post" enctype="multipart/form-data">
			<!-- Slides -->
			<div class="frame_slide rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">Slide</h6>
				</div>

				<div class="info">
					<div class="items">
						@foreach (var photo in photos)
						{
							<div class="add_item mb-3 rounded-1 d-flex flex-wrap gap-1 gap-lg-0 position-relative">
								<button class="btn_remove_item"
										type="button">
									<i class="icon_remove_item fa-solid fa-xmark"></i>
								</button>

								<div class="add_img col-12 col-lg-6 add_img_height rounded-1 p-2">
									<p class="text-center">@translate["label_hinh_anh"]</p>
									<div class="input_img bg-white h-100 d-flex justify-content-center align-items-center d-none">
										<button class="btn_add_img outline-none color-tree bg-transparent fs-1 px-4 py-2 border rounded-1"
												type="button">
											<i class="icon_add fa-solid fa-plus"></i>
										</button>
										<input class="file" type="file" hidden />
									</div>

									<div class="preview_img position-relative" style="height: calc(100% - 27px);">
										<img class="show_temp h-100 object-fit-cover mx-auto d-block rounded-1 click_show_image"
											 src="/img/tree-img/@photo.ImageName"
											 alt="" />

										<button class="btn_remove_preview_img"
												type="button">
											<i class="icon_remove fa-solid fa-xmark"></i>
										</button>
									</div>
								</div>

								<div class="add_content col-12 col-lg-6 d-lg-flex flex-lg-wrap align-items-lg-center p-2">
									<p class="text-center col-12 align-self-start">@translate["label_mo_ta"]</p>

									<div class="add_content_item mt-1 m-lg-0 col-12">
										<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
										<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" type="text" name="" value="@photo.NoteImgEn" />
									</div>

									<div class="add_content_item mt-1 m-lg-0 col-12">
										<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
										<input class="w-100 border-none bg_white green_effect px-2 py-1 rounded-1 text_body" type="text" name="" value="@photo.NoteImgVi" />
									</div>
								</div>
							</div>
						}
					</div>

					<div class="text-center py-2">
						<button class="btn_add_item_slide" type="button">
							@translate["label_them_item"]
						</button>
					</div>
				</div>
			</div>

			<!-- Info name -->
			<div class="frame_name_info rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">@translate["label_thong_tin"]</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="left col-12 col-lg-6 d-flex flex-column gap-1 pr-10">
						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">@translate["label_ten"] (@translate["label_tieng_anh"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" type="text" name="NameEn" value="@Model.NameEn" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">@translate["label_ten"] (@translate["label_tieng_viet"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" type="text" name="NameVi" value="@Model.NameVi" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">@translate["label_ten_khoa_hoc"]</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" type="text" name="ScientificName" value="@Model.ScientificName" />
						</div>
					</div>

					<div class="right col-12 col-lg-6 d-flex flex-column gap-1 pl-10">
						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">@translate["label_ten_khac"] (@translate["label_tieng_anh"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" type="text" name="CommonNameEn" value="@Model.CommonNameEn" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">@translate["label_ten_khac"] (@translate["label_tieng_viet"])</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" type="text" name="CommonNameVi" value="@Model.CommonNameVi" />
						</div>

						<div class="add_content_item mt-1 m-lg-0">
							<small class="mb-1 d-block font-small">@translate["label_ho"]</small>
							<input class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" type="text" name="Familia" value="@Model.Familia" />
						</div>
					</div>
				</div>
			</div>

			<!-- Morophophy -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">@translate["label_hinh_thai"]</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="MorphologyEn" cols="30" rows="7">@Model.MorphologyEn</textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="MorphologyVi" cols="30" rows="7">@Model.MorphologyVi</textarea>
					</div>
				</div>
			</div>

			<!-- Eocology -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">@translate["label_sinh_thai"]</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="EcologyEn" cols="30" rows="7">@Model.EcologyEn</textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="EcologyVi" cols="30" rows="7">@Model.EcologyVi</textarea>
					</div>
				</div>
			</div>

			<!-- Use -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">@translate["label_cong_dung"]</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_anh"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="UseEn" cols="30" rows="7">@Model.UseEn</textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_tieng_viet"]</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="UseVi" cols="30" rows="7">@Model.UseVi</textarea>
					</div>
				</div>
			</div>

			<!-- Distribution and Conservation status -->
			<div class="frame_morphophy rounded-1 mb-2 bg-form box">
				<div class="toggle_title text-center mb-2 cursor-pointer">
					<h6 class="py-2 bg-black text-white rounded-1">@translate["label_phan_bo_va_tinh_trang"]</h6>
				</div>

				<div class="info px-2 add_content d-flex flex-wrap justify-content-lg-between">
					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_phan_bo"] (@translate["label_tieng_anh"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="DistributionEn" cols="30" rows="3">@Model.DistributionEn</textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_phan_bo"] (@translate["label_tieng_viet"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="DistributionVi" cols="30" rows="3">@Model.DistributionVi</textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pr-10">
						<small class="mb-1 d-block font-small">@translate["label_tinh_trang_bao_ton"] (@translate["label_tieng_anh"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" name="ConservationStatusEn" cols="30" rows="3">@Model.ConservationStatusEn</textarea>
					</div>

					<div class="add_content_item col-12 col-lg-6 mt-1 m-lg-0 pl-10">
						<small class="mb-1 d-block font-small">@translate["label_tinh_trang_bao_ton"] (@translate["label_tieng_viet"])</small>
						<textarea class="w-100 border-none bg-white green_effect px-2 py-1 rounded-1 text_body" action="ConservationStatusVi" cols="30" rows="3">@Model.ConservationStatusVi</textarea>
					</div>
				</div>
			</div>

			<!-- Frame button -->
			<div class="d-flex justify-content-center my-3 gap-2">
				<button type="button" onclick="saveLinkBack.getUrlIndex();"
						class="px-3 py-2 border-none outline-none rounded-1 time_delay_500ms text_body bg-white opacity_hover">
					<i class="fa-solid fa-list"></i>
					<span class="hidden_mobile">
						@translate["label_quay_lai_danh_sach"]
					</span>
				</button>

				<button type="button" onclick="location.reload();"
						class="px-3 py-2 border-none outline-none rounded-1 time_delay_500ms text-white bg-secondary opacity_hover">
					<i class="fa-solid fa-eraser"></i>
					<span class="hidden_mobile">
						@translate["label_xoa_sach"]
					</span>
				</button>

				<button class="btn_submit_form px-3 py-2 border-none outline-none bg-tree rounded-1 text-white opacity_hover time_delay_500ms">
					<i class="fa-solid fa-floppy-disk"></i>
					<span class="hidden_mobile">
						@translate["label_them"]
					</span>
				</button>
			</div>
		</form>
	</div>
</section>							