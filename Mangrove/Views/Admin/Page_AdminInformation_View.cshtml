@inject IStringLocalizer<Translate> translate
@model TblAdmin
@{
	ViewData["Title"] = @translate["label_thong_tin_quan_tri"];
	ViewData["InfoPage"] = @translate["label_thong_tin_quan_tri"] + $" ({translate["label_chi_xem"]})";
	ViewData["TypePage"] = "Page_Setting";

	Layout = Helper.Path.layoutAdmin;
	string pv = Helper.Path.partialView;
}

<section class="module_auth w-100 d-flex align-items-center justify-content-center" style="min-height: 85vh;">
	<div class="container d-flex align-items-center justify-content-center">
		<div class="col-12 col-sm-8 col-xl-5 py-4 px-3 px-lg-4 rounded-1 bg-form width_auth">
			<h3 class="text-center mb-3 text-black">@translate["label_thong_tin_quan_tri"]</h3>

			<!-- Username -->
			<div class="frame_password d-flex justify-content-center align-items-center bg-white my-3 rounded-1">
				<i class="fa-solid fa-user col-1 text-center"></i>
				<span class="flex-grow-1 border-none py-2 outline-none">@Model.Username</span>
				<i class="fa-solid fa-lock col-1 text-center"></i>
			</div>

			<!-- Email -->
			<div class="frame_password d-flex justify-content-center align-items-center bg-white my-3 rounded-1">
				<i class="fa-solid fa-envelope col-1 text-center"></i>
				<span class="flex-grow-1 border-none py-2 outline-none">@Model.Email</span>
				<i class="fa-solid fa-lock col-1 text-center"></i>
			</div>

			<!-- Frame button -->
			<div class="d-flex justify-content-center gap-3 justify-content-sm-between align-items-center mt-5">
				<button type="button"
						onclick="saveLinkBack.getUrlIndex();"
						class="text-tree_hover border-none bg-white text_body px-3 py-2 rounded-1 opacity_hover btn_loading outline">
					<i class="fa-solid fa-backward"></i>
					<span class="hidden_mobile">@translate["label_tro_ve"]</span>
				</button>
				<a class="rounded-1 px-3 py-2 bg-tree text-white bg_black_hover time_delay_500ms btn_loading text-center"
				   href='@Url.Action("Page_AdminInformation_Edit", "Admin")'
				   onclick="saveLinkBack.saveIndex('@Helper.Key.adminInfo')">
					<i class="fas fa-edit"></i>
					<span class="hidden_mobile">@translate["label_sua"]</span>
				</a>
			</div>
		</div>
	</div>
</section>

