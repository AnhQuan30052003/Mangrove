@inject IStringLocalizer<Translate> translate
@model PaginateModel<TblMangrove>
@{
	var isEN = Helper.Func.IsLanguage("en");
	ViewData["Title"] = ViewData["InfoPage"] = @translate["label_doi_mat_khau"];
	ViewData["TypePage"] = "Page_Setting";

	Layout = Helper.Path.layoutAdmin;
	string pv = Helper.Path.partialView;
}

<section class="module_auth w-100 d-flex align-items-center justify-content-center" style="height: 85vh;">
	<form action="" method="post" class="col-12 col-sm-8 col-xl-5 px-3 px-xl-5 border" style="height: 300px;">
		<h3 class="text-center mb-3">@translate["label_doi_mat_khau"]</h3>

		<input name="account" type="text" value="" hidden>

		<div class="frame_password px-2 d-flex justify-content-center align-items-center bg-white my-2 rounded-2">
			<i class="fa-solid fa-key col-1"></i>
			<input name="passwordOld" type="password" placeholder="@translate["label_nhap_mat_khau_cu"]"
				   class="col-10 border-none py-2 outline-none" autofocus>
			<span class="d-flex col-1 justify-content-center cursor-pointer">
				<i class="icon_eye icon_eye_open fa-solid fa-eye d-none"></i>
				<i class="icon_eye icon_eye_close fa-regular fa-eye-slash"></i>
			</span>
		</div>

		<div class="frame_password px-2 d-flex justify-content-center align-items-center bg-white my-2 rounded-2">
			<i class="fa-solid fa-key col-1"></i>
			<input name="passwordNew" type="password" placeholder="@translate["label_nhap_mat_khau_moi"]"
				   class="col-10 border-none py-2 outline-none">
			<span class="d-flex col-1 justify-content-center cursor-pointer">
				<i class="icon_eye icon_eye_open fa-solid fa-eye d-none"></i>
				<i class="icon_eye icon_eye_close fa-regular fa-eye-slash"></i>
			</span>
		</div>

		<div class="frame_password px-2 d-flex justify-content-center align-items-center bg-white my-2 rounded-2">
			<i class="fa-solid fa-key col-1"></i>
			<input name="passwordNewConfirm" type="password" placeholder="@translate["label_nhap_lai_mat_khau_moi"]"
				   class="col-10 border-none py-2 outline-none">
			<span class="d-flex col-1 justify-content-center cursor-pointer">
				<i class="icon_eye icon_eye_open fa-solid fa-eye d-none"></i>
				<i class="icon_eye icon_eye_close fa-regular fa-eye-slash"></i>
			</span>
		</div>

		<div class="d-flex justify-content-between align-items-center mt-3">
			<a href="javascript:history.back(-1);"
			   class="forgotten_password underline_hover color_green_hover">@translate["label_tro_ve"] ?</a>
			<button class="btn_auth">@translate["label_luu"]</button>
		</div>
	</form>
</section>
