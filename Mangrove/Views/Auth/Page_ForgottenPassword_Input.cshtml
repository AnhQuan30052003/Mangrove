@inject IStringLocalizer<Translate> translate
@{
	ViewData["Title"] = @translate["label_quen_mat_khau"];
	Layout = Helper.Path.layoutAdmin_Auth;
}

<form action="" method="post" class="w-100 px-3 px-xl-5">
	<h3 class="text-center mb-3">@translate["label_quen_mat_khau"]</h3>

	<!-- Email -->
	<div class="px-2 d-flex justify-content-center align-items-center my-2 rounded-2 bg-form">
		<i class="fa-solid fa-envelope col-1"></i>
		<input type="text"
			   name="email"
			   value="@ViewData["Email"]"
			   readonly
			   class="col-11 border-none py-2 outline-none text_body">
	</div>

	<!-- Code reset -->
	<div class="px-2 d-flex justify-content-center align-items-center bg-white my-2 rounded-2">
		<i class="fa-solid fa-hashtag col-1"></i>
		<input name="codeNumber" type="text"
			   placeholder="@translate["label_nhap_ma_6_so"]" value="@ViewData["CodeNumber"]"
			   autofocus
			   class="col-11 border-none py-2 outline-none pointer_last text_body">
	</div>
	<p class="text-danger small_font">@Helper.Validate.ShowError()</p>

	<!-- New password -->
	<div class="frame_password px-2 d-flex justify-content-center align-items-center bg-white my-2 rounded-2">
		<i class="fa-solid fa-key col-1"></i>
		<input name="newPass" type="password"
			   placeholder="@translate["label_nhap_mat_khau_moi"]" value="@ViewData["NewPass"]"
			   class="col-10 border-none py-2 outline-none text_body">
		<span class="d-flex col-1 justify-content-center cursor-pointer">
			<i class="icon_eye icon_eye_open fa-solid fa-eye d-none"></i>
			<i class="icon_eye icon_eye_close fa-regular fa-eye-slash"></i>
		</span>
	</div>
	<p class="text-danger small_font">@Helper.Validate.ShowError()</p>

	<!-- Confirm new password -->
	<div class="frame_password px-2 d-flex justify-content-center align-items-center bg-white my-2 rounded-2">
		<i class="fa-solid fa-key col-1"></i>
		<input name="newPassConfirm" type="password"
			   placeholder="@translate["label_nhap_lai_mat_khau_moi"]" value="@ViewData["NewPassConfirm"]"
			   class="col-10 border-none py-2 outline-none text_body">
		<span class="d-flex col-1 justify-content-center cursor-pointer">
			<i class="icon_eye icon_eye_open fa-solid fa-eye d-none"></i>
			<i class="icon_eye icon_eye_close fa-regular fa-eye-slash"></i>
		</span>
	</div>
	<p class="text-danger small_font">@Helper.Validate.ShowError()</p>

	<!-- Frame buttons and links -->
	<div class="d-flex justify-content-between align-items-center mt-3">
		<a href='@Url.Action("Page_ForgottenPassword_Find", "Auth")'
		   class="forgotten_password underline_hover text_tree_hover btn_loading">
			@translate["label_quay_lai_tim_email"] ?
		</a>
		<button class="btn_auth bg-tree text-white bg_black_hover time_delay_500ms btn_loading">
			@translate["label_luu"]
		</button>
	</div>
</form>
