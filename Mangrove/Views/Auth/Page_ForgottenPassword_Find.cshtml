@inject IStringLocalizer<Translate> translate
@{
	ViewData["Title"] = @translate["label_quen_mat_khau"];
	Layout = Helper.Path.layoutAdmin_Auth;
}

<form action="" method="post" class="w-100 px-3 px-xl-5">
	<h3 class="text-center mb-3">@translate["label_quen_mat_khau"]</h3>

	<div class="px-2 d-flex justify-content-center align-items-center bg-white my-2 rounded-2">
		<i class="fa-solid fa-user col-1"></i>
		<input name="email" type="email" placeholder="Email" value="" autofocus
			   class="col-11 border-none py-2 outline-none">
	</div>

	<div class="d-flex justify-content-between align-items-center mt-3">
		<a href='@Url.Action("Page_Login", "Auth")'
		   class="forgotten_password underline_hover text_tree_hover btn_loading">
		   @translate["label_quay_lai_dang_nhap"] ?
	   </a>
		<button class="btn_auth bg-tree text-white bg_black_hover time_delay_500ms btn_loading">@translate["label_tim"]</button>
	</div>
</form>
