@using Mangrove.Data
@model List<TblMangrove>

@{
    ViewData["Title"] = "Thành phần loài";
    Layout = Helper.Path.layoutUser;
    string _pv = Helper.Path.partialView;
}

@await Html.PartialAsync($"{_pv}/User_Back.cshtml", (long?)null)

<section class="module_species_composition container text-center py-2">
    <div class="box bg-white mb-2">
        <div class="toggle_title cursor-pointer text-center mt-1 mb-2">
            <h5 class="py-2 bg-black text-white">Thành phần loài</h5>
        </div>

        <div class="info list_mangrove_info">
            @{
                <div class="p-2">
                    <div class="form_search">
                        <div class="search d-flex justify-content-center">
                            <div
                                class="form_input border green_effect d-flex h-100 align-items-center justify-content-center gap-1 px-2 rounded-1 overflow-hidden">
                                <i class="icon-s fa fa-search"></i>
                                <input class="p-2 border-none flex-grow-1 outline-none" type="search" id="search_mangrove"
                                    placeholder="Tìm kiếm trong @Model.Count loài...">
                            </div>
                        </div>

                        <div class="bg-black mt-2" style="height: 3px;"></div>

                        <div class="list_mangrove pb-1 pt-2 px-2">
                            @await Html.PartialAsync($"{_pv}/User_ListMangrove.cshtml", Model)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@await Html.PartialAsync($"{_pv}/User_Back.cshtml", (long?)null)
