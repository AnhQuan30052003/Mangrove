<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="wwwroot\img\qr_img\**" />
    <Content Remove="wwwroot\img\qr_img\**" />
    <EmbeddedResource Remove="wwwroot\img\qr_img\**" />
